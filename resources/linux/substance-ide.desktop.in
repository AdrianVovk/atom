[Desktop Entry]
Name=<%= appName %>
Comment=<%= description %>
GenericName=Text Editor
Exec=<%= installDir %>/share/<%= appFileName %>/substance-ide %F
Icon=<%= iconPath %>
Type=Application
StartupNotify=true
Categories=GNOME;GTK;Utility;TextEditor;Development;
MimeType=text/plain;
Actions=Dev;Safe

[Desktop Action Dev]
Exec=<%= installDir %>/share/<%= appFileName %>/substance-ide --dev %F
Name=Developer Mode

[Desktop Action Safe]
Exec=<%= installDir %>/share/<%= appFileName %>/substance-ide --safe %F
Name=Safe Mode
